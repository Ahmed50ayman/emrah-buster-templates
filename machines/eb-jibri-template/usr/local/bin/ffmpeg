#!/bin/bash

ARGS=$@

if [[ -n "$(echo $ARGS | grep 'rtmp://.*://')" ]]; then
    DST_RAW=$(echo $ARGS | rev | awk '{print $1}' | rev)
    DST=$(echo $DST_RAW | sed 's~^[^:/]*://~~' | egrep -o '[^:/]*://.*')

    ARGS=$(echo $ARGS | sed "s~rtmp://.*~~")
    ARGS="$ARGS $DST"
fi

echo $ARGS >> /tmp/ffmpeg.log
exec /usr/bin/ffmpeg $ARGS
